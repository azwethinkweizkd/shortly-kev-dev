@{
    ViewData["Title"] = "Welcome";
}


<section class="landing py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-4">
                <img src="~/img/12065239_4896138.svg" class="img-fluid rounded-circle shadow shadow-lg" alt="" />
            </div>
            <div class="col-lg-8 text-end">
                <h1 class="display-4">More than just shorter links</h1>
                <p class="lead">Build your brand's recognition and get detailed insights on how your links are performing.</p>
            </div>
        </div>
    </div>
</section>

<section class="features" id="features">
    <div class="container">
        <!-- Update action attribute to point to ShortenAction in Homecontroller-->
        <form class="url-shorten-form" id="url-shorten-form" action="/Home/ShortenAction" method="post">
            <div>
                <input type="type" class="url-input" name="urlToShorten" placeholder="Shorten a link here...." />
                <span class="alert"></span>
            </div>
            <button type="submit" class="btn btn-lg">Shorten it!</button>
        </form>
        <div class="url-shorten-results"></div>
    </div>
</section>